rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId;
    }
    
    function hasPermission(permission) {
      let role = get(/databases/$(database)/documents/roles/$(getUserRole()));
      return permission in role.data.permissions;
    }
    
    match /permissions/{permissionId} {
      allow read: if isAuthenticated() && hasPermission('permissions.view');
      allow create: if isAuthenticated() && hasPermission('permissions.create');
      allow update: if isAuthenticated() && hasPermission('permissions.edit');
      allow delete: if isAuthenticated() && hasPermission('permissions.delete');
    }
    
    match /roles/{roleId} {
      allow read: if isAuthenticated() && hasPermission('roles.view');
      allow create: if isAuthenticated() && hasPermission('roles.create');
      allow update: if isAuthenticated() && hasPermission('roles.permissions.assign');
      allow delete: if isAuthenticated() && hasPermission('roles.delete') && !resource.data.isSystemRole;
    }
    
    match /users/{userId} {
      allow read: if isAuthenticated() && (userId == request.auth.uid || hasPermission('users.view'));
      allow update: if isAuthenticated() && hasPermission('users.edit.role');
    }
    
    match /serviceDefinitions/{definitionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && hasPermission('services.definition.create') && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && hasPermission('services.definition.edit') && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && hasPermission('services.definition.delete') && resource.data.userId == request.auth.uid;
    }
    
    match /serviceInstances/{instanceId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && hasPermission('services.instance.create') && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && hasPermission('services.instance.edit') && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && hasPermission('services.instance.delete') && resource.data.userId == request.auth.uid;
    }
    
    match /activityLogs/{logId} {
      allow read: if isAuthenticated() && (hasPermission('logs.view') || resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated();
      allow delete: if isAuthenticated() && hasPermission('logs.delete');
      allow update: if false;
    }
  }
}
